<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/blahGrey"
            app:layout_constraintTop_toTopOf="@id/root"
            app:layout_constraintStart_toStartOf="@id/root"
            app:layout_constraintEnd_toEndOf="@id/root"/>

    <TextView
            android:id="@+id/route_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:gravity="center"
            android:minWidth="24dp"
            android:background="@drawable/text_view_rounded_corner"
            android:backgroundTint="#1E9AD0"
            android:backgroundTintMode="src_in"
            android:fontFamily="@font/google_sans_bold"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="@id/root"/>

    <TextView
            android:id="@+id/destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_medium"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/divider"
            app:layout_constraintStart_toEndOf="@id/route_id"
            app:layout_constraintEnd_toStartOf="@id/due"/>

    <TextView
            android:id="@+id/due"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="@font/google_sans_bold"
            app:layout_constraintEnd_toEndOf="@id/root"
            app:layout_constraintBottom_toBottomOf="@id/root"/>

</androidx.constraintlayout.widget.ConstraintLayout>
