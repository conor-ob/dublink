    <ImageView
            android:id="@+id/trainIconBorder"
            android:background="@drawable/text_view_rounded_corner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
            android:src="@drawable/ic_train"
            android:padding="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/direction_destination"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/google_sans_medium"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/train_type"
            app:layout_constraintStart_toEndOf="@id/trainIconBorder"
            tools:text="Howth"/>

        <TextView
                android:id="@+id/train_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/google_sans_regular"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/direction_destination"
                app:layout_constraintStart_toEndOf="@id/trainIconBorder"
                tools:text="DART"/>

        <TextView
                android:id="@+id/due"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/google_sans_bold"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="5 min"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/due_later"
                app:layout_constraintVertical_chainStyle="spread_inside"/>

        <TextView
                android:id="@+id/due_later"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/google_sans_regular"
                android:textSize="12sp"
                tools:text="and in 7, 9, 12 min"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/due"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
