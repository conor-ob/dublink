                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textAppearance="@style/TextAppearance.DublinMapper.ToolbarTitle"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"/>


