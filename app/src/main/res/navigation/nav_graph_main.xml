<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main.xml"
    app:startDestination="@id/favouritesFragment">

    <fragment android:id="@+id/favouritesFragment"
        android:name="ie.dublinmapper.favourites.FavouritesFragment"
        android:label="SearchFragment">

        <action android:id="@+id/favouritesFragment_to_livedataFragment"
            app:destination="@id/liveDataFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>

        <action android:id="@+id/favouritesFragment_to_newsFragment"
            app:destination="@id/newsFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>

        <action android:id="@+id/favouritesFragment_to_nearbyFragment"
                app:destination="@id/nearbyFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>

        <action android:id="@+id/favouritesFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>

    <fragment android:id="@+id/newsFragment"
        android:name="ie.dublinmapper.news.NewsFragment"
        android:label="NewsFragment">

    </fragment>

    <fragment android:id="@+id/nearbyFragment"
            android:name="ie.dublinmapper.nearby.NearbyFragment"
            android:label="NearbyFragment">

        <action android:id="@+id/nearbyFragment_to_livedataFragment"
                app:destination="@id/liveDataFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"/>

    </fragment>

    <fragment android:id="@+id/searchFragment"
        android:name="ie.dublinmapper.search.SearchFragment"
        android:label="SearchFragment">

        <action android:id="@+id/searchFragment_to_livedataFragment"
            app:destination="@id/liveDataFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

    </fragment>

    <fragment android:id="@+id/liveDataFragment"
        android:name="ie.dublinmapper.livedata.LiveDataFragment"
        android:label="LiveDataFragment">

        <argument
            android:name="serviceLocationId"
            app:argType="string" />
        <argument
            android:name="serviceLocationName"
            app:argType="string" />
        <argument
            android:name="serviceLocationService"
            app:argType="io.rtpi.api.Service" />
        <argument
            android:name="serviceLocationIsFavourite"
            app:argType="boolean" />

    </fragment>

    <activity
        android:id="@+id/settingsActivity"
        android:name="ie.dublinmapper.settings.SettingsActivity"
        android:label="SettingsActivity" />

</navigation>
