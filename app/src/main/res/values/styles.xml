<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:itemTextAppearance">@style/MenuItemTextAppearance</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="Toolbar.Search">
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="android:theme">@style/SearchToolbarTheme</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SearchToolbarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
