<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.Theme.DublinMapper" parent="Theme.MaterialComponents.DayNight" />

    <style name="Base.Theme.DublinMapper" parent="Platform.Theme.DublinMapper">
        <item name="actionBarTheme">@style/ThemeOverlay.DublinMapper.ActionBar</item>

        <item name="windowActionModeOverlay">true</item>

        <!-- Default widget styles -->
        <item name="toolbarStyle">@style/Widget.DublinMapper.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Widget.MaterialComponents.AppBarLayout.Surface</item>

        <!-- Type styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DublinMapper.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DublinMapper.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DublinMapper.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DublinMapper.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DublinMapper.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DublinMapper.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DublinMapper.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DublinMapper.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DublinMapper.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DublinMapper.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DublinMapper.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.DublinMapper.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DublinMapper.Overline</item>

        <item name="textAppearanceLargePopupMenu">?attr/textAppearanceBody1</item>
        <item name="textAppearanceSmallPopupMenu">?attr/textAppearanceBody2</item>
        <item name="textAppearancePopupMenuHeader">@style/TextAppearance.DublinMapper.PopupMenu.Header</item>
    </style>

    <style name="Theme.DublinMapper" parent="Base.Theme.DublinMapper">
        <item name="colorPrimary">@color/DublinMapper_slate_700</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <item name="colorPrimaryVariant">@color/DublinMapper_slate_600</item>
        <item name="colorPrimaryDark">@color/DublinMapper_slate_800</item>

        <item name="colorSecondary">@color/DublinMapper_mtrl_orange_700</item>
        <item name="colorSecondaryVariant">@color/DublinMapper_mtrl_orange_500</item>
        <item name="colorOnSecondary">#000000</item>
    </style>

    <style name="Theme.DublinMapper.NoActionBar" parent="Theme.DublinMapper">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DublinMapper.Home" parent="Theme.DublinMapper.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="ThemeOverlay.DublinMapper.ActionBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="ThemeOverlay.DublinMapper.Primary" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
    </style>

</resources>


