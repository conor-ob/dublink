import io.rtpi.api.Operator;

CREATE TABLE luasServices (
    id INTEGER NOT NULL PRIMARY KEY AUTOINCREMENT,
    locationId TEXT NOT NULL,
    route TEXT NOT NULL,
    operator TEXT AS Operator NOT NULL,
    FOREIGN KEY (locationId) REFERENCES luasLocations(id)
);

selectAll:
SELECT * FROM luasServices;

insertOrReplace:
INSERT OR REPLACE INTO luasServices(
  locationId,
  route,
  operator
)
VALUES (?, ?, ?);

deleteAll:
DELETE FROM luasServices;
