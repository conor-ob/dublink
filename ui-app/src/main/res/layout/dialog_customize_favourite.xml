<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_xxs"
    android:paddingEnd="@dimen/padding_xxs">

        <EditText
            android:id="@+id/favourite_edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="text"
            android:textAppearance="@style/TextAppearance.DubLink.Body1" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/favourite_edit_routes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_l"
            android:paddingTop="@dimen/padding_l"
            android:paddingEnd="@dimen/padding_l"
            android:paddingBottom="@dimen/padding_xxxl"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone"
            app:chipSpacingHorizontal="8dp"
            app:chipSpacingVertical="12dp"
            app:singleLine="false" />

</LinearLayout>
