<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.DubLink.DayNight" parent="Theme.DubLink">
        <item name="colorPrimary">@color/dublink_blue_saturated</item>
        <item name="colorPrimaryVariant">@color/dublink_blue_saturated</item>
        <item name="colorOnPrimary">@color/grey_900</item>
        <item name="colorSecondary">@color/dublink_blue_saturated</item>
        <item name="colorSecondaryVariant">@color/dublink_blue_saturated</item>
        <item name="colorOnSecondary">@color/grey_900</item>

        <item name="android:colorBackground">@color/grey_950</item>
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorSurface">@color/grey_900</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="android:statusBarColor">?colorSurface</item>

        <item name="colorError">@color/error_red_saturated</item>
        <item name="colorOnError">@android:color/black</item>
        <item name="colorSuccess">@color/success_green_saturated</item>
        <item name="colorOnSuccess">@android:color/black</item>

        <item name="colorSurfaceDivider">@color/grey_850</item>

        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>
    </style>

</resources>
