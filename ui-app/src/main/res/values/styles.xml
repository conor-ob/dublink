<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.DubLink.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface" />

    <style name="Widget.DubLink.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="titleTextAppearance">@style/TextAppearance.DubLink.Headline6</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Widget.DubLink.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
            <item name="android:layout_gravity">bottom|center</item>
            <item name="android:layout_margin">@dimen/padding_xl</item>
    </style>

    <style name="Widget.DubLink.RouteChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipCornerRadius">5dp</item>
        <item name="chipStartPadding">5dp</item>
        <item name="chipEndPadding">5dp</item>
        <item name="chipMinHeight">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="iconStartPadding">0dp</item>
        <item name="iconEndPadding">0dp</item>
        <item name="textStartPadding">0dp</item>
        <item name="textEndPadding">0dp</item>
        <item name="closeIconStartPadding">0dp</item>
        <item name="closeIconEndPadding">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DubLink.Button</item>
        <item name="android:elevation">4dp</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="Widget.DubLink.RouteFilterChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipMinHeight">28dp</item>
        <item name="android:textAppearance">@style/TextAppearance.DubLink.Button.RouteFilter</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.DubLink.Snackbar.TextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textAppearance">@style/TextAppearance.DubLink.ListItemTitle</item>
    </style>

</resources>
