<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_xs"
        android:layout_marginBottom="@dimen/padding_xs"
        android:layout_marginStart="@dimen/padding_xl"
        android:layout_marginEnd="@dimen/padding_xl"
        android:backgroundTint="@color/iap_grey"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_l"
            android:orientation="vertical">

            <TextView
                android:id="@+id/feature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.DubLink.FeatureTitle" />

            <View
                android:layout_width="0dp"
                android:layout_height="4dp" />

            <TextView
                android:id="@+id/feature_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.DubLink.ListItemBody" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>