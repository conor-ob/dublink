<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--    <PreferenceCategory android:title="User Interface"-->
    <!--            android:summary="Customize your app">-->

    <PreferenceCategory android:title="Customization">

        <ListPreference
            android:entries="@array/theme_names"
            android:entryValues="@array/theme_values"
            android:key="@string/preference_key_preferred_theme"
            android:title="Theme"
            app:useSimpleSummaryProvider="true" />

<!--        <ListPreference-->
<!--            android:entries="@array/screen_names"-->
<!--            android:entryValues="@array/screen_values"-->
<!--            android:key="@string/preference_key_preferred_home_screen"-->
<!--            android:title="Home screen"-->
<!--            app:useSimpleSummaryProvider="true" />-->

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Favourites">

        <SwitchPreference
            android:title="Sort by Location"
            android:summary="Nearby places will be at the top"
            android:defaultValue="false" />

        <SeekBarPreference
            android:title="Live Times"
            android:summary="How many places will display live times"
            android:max="10"
            app:showSeekBarValue="true"
            android:defaultValue="3"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Choose your favourites"
        android:title="Transport Services">

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_enabled_service_dublin_bus"
            android:summary="Dublin Bus and Go Ahead"
            android:title="@string/service_name_dublin_bus" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_enabled_service_irish_rail"
            android:summary="DART, Commuter and InterCity"
            android:title="@string/service_name_irish_rail" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_enabled_service_luas"
            android:title="@string/service_name_luas" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_enabled_service_bus_eireann"
            android:title="@string/service_name_bus_eireann" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/preference_key_enabled_service_dublin_bikes"
            android:title="@string/service_name_dublin_bikes" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/preference_key_enabled_service_aircoach"
            android:summary="ðŸš§ Experimental"
            android:title="@string/service_name_aircoach" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Live Times">

        <SeekBarPreference
            android:title="Refresh Rate"
            android:summary="How often to refresh live times (seconds)"
            android:max="60"
            app:min="20"
            app:seekBarIncrement="5"
            app:showSeekBarValue="true"
            android:defaultValue="45"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="About">

        <Preference
            android:key="@string/preference_key_app_version"
            android:title="@string/preference_name_app_version" />

    </PreferenceCategory>

</PreferenceScreen>
