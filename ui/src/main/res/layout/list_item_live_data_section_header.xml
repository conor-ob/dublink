<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/shape_rounded_top_corners"
        android:backgroundTint="@color/grey_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:outlineProvider="bounds"
        android:paddingTop="@dimen/padding_s"
        android:paddingBottom="@dimen/padding_s"
        android:paddingStart="@dimen/padding_m"
        android:paddingEnd="@dimen/padding_m">

    <TextView
            android:id="@+id/direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.DublinMapper.LiveDataSectionHeader"
            tools:text="Northbound"/>

</FrameLayout>
