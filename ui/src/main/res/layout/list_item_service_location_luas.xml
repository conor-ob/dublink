<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <ImageView
            android:id="@+id/service_location_logo"
            android:layout_width="87dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_logo_luas"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>


    <TextView
            android:id="@+id/service_location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/google_sans_bold"
            android:textSize="16sp"
            tools:text="St. Stephen's Green"
            app:layout_constraintTop_toBottomOf="@+id/service_location_logo"
            app:layout_constraintBottom_toTopOf="@id/service_location_walk_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside"/>

    <TextView
            android:id="@+id/service_location_walk_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/google_sans_medium"
            android:textSize="12sp"
            tools:text="8 min walk"
            app:layout_constraintTop_toBottomOf="@id/service_location_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>
