<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/service_location_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:src="@drawable/ic_logo_irish_rail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/service_location_name"
            app:layout_constraintHorizontal_chainStyle="spread"/>


    <TextView
            android:id="@+id/service_location_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/google_sans_bold"
            android:textSize="16sp"
            tools:text="Dublin Pearse"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/service_location_walk_time"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/service_location_logo"
            app:layout_constraintEnd_toStartOf="@id/service_location_live_data"/>

    <TextView
            android:id="@+id/service_location_walk_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/text_secondary"
            android:fontFamily="@font/google_sans_medium"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_walk"
            android:drawablePadding="4dp"
            tools:text="8 min"
            app:layout_constraintTop_toBottomOf="@id/service_location_name"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toEndOf="@id/service_location_logo"
            app:layout_constraintEnd_toStartOf="@id/service_location_live_data"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
            android:id="@+id/service_location_live_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
