    <style name="DublinMapperTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:navigationBarColor">@color/color_navigation_bar_launcher</item>
    </style>

    <style name="Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!--<item name="titleTextAppearance">@style/TextAppearance.DublinMapper.ToolbarTitle</item>-->
        <!--<item name="popupTheme">@style/AppTheme.PopupTheme</item>-->
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="AppTheme.PopupTheme" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.MaterialComponents.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="TextAppearance.DublinMapper.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/google_sans_bold</item>
    </style>

    <style name="TextAppearance.DublinMapper.LiveDataSectionHeader" parent="@style/Base.TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="Widget.DublinMapper.Tabs" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.DublinMapper.Tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
    </style>

    <style name="TextAppearance.DublinMapper.Tab" parent="@style/TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/google_sans_regular</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.DublinMapper.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.IOSched.Body</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.IOSched.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
        <item name="popupTheme">@style/AppTheme.PopupTheme</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">0dp</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="Toolbar.Search">
        <item name="android:background">@color/white</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
        <item name="android:theme">@style/SearchToolbarTheme</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@color/grey_900</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="SearchToolbarTheme" parent="DublinMapperTheme">
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>
    </style>

    <style name="MenuItemTextAppearance">
        <item name="android:textColor">@color/text_primary</item>
    </style>

</resources>
